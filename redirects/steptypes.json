{
    "@type-id": "custom.CSComponents.GenerateRedirects",
    "@supports-site-context": "true",
    "@supports-organization-context": "false",
    "module": "your_file_path",
    "function": "generate",
    "parameters": {
        "parameters": [
            {
                "@name": "Catalog-ID",
                "description": "Catalog ID to fetch categories from.",
                "@type": "string",
                "@required": "true",
                "@trim": "true"
            },
            {
                "@name": "Hostname",
                "description": "Hostname of the current instance (with protocol).",
                "@type": "string",
                "@required": "false",
                "@trim": "true"
            },
            {
                "@name": "Refinements",
                "description": "A comma separated list of refinement ids.",
                "@type": "string",
                "@required": "true",
                "@trim": "true"
            },
            {
                "@name": "Second-Level-Categories",
                "description": "A comma separated list of the 2nd level categories to redirect to.",
                "@type": "string",
                "@required": "false",
                "@trim": "true"
            },
            {
                "@name": "Third-Level-Categories",
                "description": "A comma separated list of the 3rd level categories to redirect to.",
                "@type": "string",
                "@required": "false",
                "@trim": "true"
            }
        ]
    },
    "status-codes": {
        "status": [
            {
                "@code": "ERROR",
                "description": "Used when an error occurred."
            },
            {
                "@code": "OK",
                "description": "Used when everything went well."
            }
        ]
    }
}
